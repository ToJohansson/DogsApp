@model DogsApp.MVC.Models.Dog[];

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Dogs</title>
	<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body>
	<h1>Dogs</h1>

	<ul>
		@foreach (var dog in Model)
		{
			<li>
				<h2>@dog.Name age:@dog.Age</h2>
				<a href="/edit/@dog.Id">edit</a>
				<a href="/delete/@dog.Id">delete</a>
			</li>
		}
	</ul>
	<a href="/Create">Create a new dog</a>

</body>
</html>